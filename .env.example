SOLANA_BRIDGE_ADDRESS=0x
ROOTSTOCK_BRIDGE_ADDRESS=0x

# ===========================================
# Deployment Keys (NEVER COMMIT REAL KEYS!)
# ===========================================

DEPLOYER_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# ===========================================
# Services
# ===========================================

# Blob Storage
BLOB_STORAGE_URL=http://localhost:3001
DB_PATH=./data
ENCRYPTION_KEY=your-secure-encryption-key

# Prover Service (optional, for remote proving)
PROVER_URL=http://localhost:3002

# ===========================================
# AI/LLM Configuration
# ===========================================

OPENAI_API_KEY=sk-your-openai-api-key

# ===========================================
# IPFS Configuration (Decentralized Storage)
# ===========================================

# IPFS Gateway URL for reading content
IPFS_GATEWAY_URL=https://gateway.pinata.cloud

# IPFS API URL for uploading (optional, uses Pinata by default)
IPFS_API_URL=https://api.pinata.cloud

# For Pinata: Get JWT at https://app.pinata.cloud/developers/api-keys
IPFS_JWT=your-pinata-jwt-token

# For Infura (alternative): Get credentials at https://infura.io/dashboard
# IPFS_API_KEY=your-infura-project-id
# IPFS_API_SECRET=your-infura-project-secret

# ===========================================
# Monitoring
# ===========================================

LOG_LEVEL=info
METRICS_PORT=9090
