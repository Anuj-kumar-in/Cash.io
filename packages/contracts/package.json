{
  "name": "@cash-io/contracts",
  "version": "1.0.0",
  "description": "Smart contracts for Cash.io protocol",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "dev": "hardhat node",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost",
    "deploy:subnet": "hardhat run scripts/deploy.ts --network avalancheSubnet",
    "deploy:cashio": "hardhat run scripts/deploy.ts --network cashiosubnet",
    "deploy:hub": "hardhat run scripts/deploy-hub.ts --network cashiosubnet",
    "deploy:hub:testnet": "hardhat run scripts/deploy-hub.ts --network cashiosepolia",
    "deploy:hub:local": "hardhat run scripts/deploy-hub.ts --network localhost",
    "deploy:bridges:sepolia": "hardhat run scripts/deploy-bridges.ts --network sepolia",
    "deploy:bridges:rsk": "hardhat run scripts/deploy-bridges.ts --network rskTestnet",
    "deploy:bridges:arbitrum": "hardhat run scripts/deploy-bridges.ts --network arbitrumSepolia",
    "deploy:bridges:optimism": "hardhat run scripts/deploy-bridges.ts --network optimismSepolia",
    "deploy:bridges:base": "hardhat run scripts/deploy-bridges.ts --network baseSepolia",
    "deploy:bridges:polygon": "hardhat run scripts/deploy-bridges.ts --network polygonAmoy",
    "setup:relayers:sepolia": "hardhat run scripts/setup-relayers.ts --network sepolia",
    "setup:relayers:rsk": "hardhat run scripts/setup-relayers.ts --network rskTestnet",
    "setup:relayers:arbitrum": "hardhat run scripts/setup-relayers.ts --network arbitrumSepolia",
    "setup:relayers:optimism": "hardhat run scripts/setup-relayers.ts --network optimismSepolia",
    "setup:relayers:base": "hardhat run scripts/setup-relayers.ts --network baseSepolia",
    "setup:relayers:polygon": "hardhat run scripts/setup-relayers.ts --network polygonAmoy",
    "deploy:registry": "hardhat run scripts/deploy-registry.ts --network cashiosubnet",
    "deploy:registry:testnet": "hardhat run scripts/deploy-registry.ts --network cashiosepolia",
    "clean": "hardhat clean && rm -rf dist typechain-types",
    "lint": "solhint 'contracts/**/*.sol'"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0",
    "hardhat": "^2.19.4",
    "solhint": "^4.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "dotenv": "^17.2.4",
    "snarkjs": "^0.7.3"
  }
}
